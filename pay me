<body>
  <div class="container">
    <h1>Send Me 1 USDC</h1>
    <p>
      Support me by sending <b>1 USDC</b> directly to my wallet.<br>
      My address: <code>0xc5a044eF36014c66887BAD57e4B56545ed29B5dD</code>
    </p>
    <button id="usdcButton">Send Me 1 USDC</button>
    <div id="result"></div>
    <p style="font-size:0.9em;color:#777;margin-top:2em;">
      Requires an Ethereum wallet (e.g., MetaMask) and some USDC.<br>
      <a href="https://etherscan.io/address/0xc5a044eF36014c66887BAD57e4B56545ed29B5dD" target="_blank">View wallet on Etherscan</a>
    </p>
  </div>
  <script>
    const USDC_ADDRESS = "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48"; // Ethereum Mainnet USDC
    const RECIPIENT = "0xc5a044eF36014c66887BAD57e4B56545ed29B5dD";
    const USDC_ABI = [
      "function transfer(address to, uint amount) returns (bool)"
    ];
    document.getElementById('usdcButton').onclick = async function() {
      const result = document.getElementById('result');
      result.textContent = '';
      if (!window.ethereum) {
        result.textContent = "No Ethereum wallet detected. Please install MetaMask!";
        return;
      }
      try {
        const provider = new ethers.providers.Web3Provider(window.ethereum);
        await provider.send("eth_requestAccounts", []);
        const signer = provider.getSigner();
        const usdc = new ethers.Contract(USDC_ADDRESS, USDC_ABI, signer);
        const amount = ethers.utils.parseUnits("1", 6); // USDC has 6 decimals
        const tx = await usdc.transfer(RECIPIENT, amount);
        result.textContent = "Transaction sent! Hash: " + tx.hash;
      } catch (err) {
        result.textContent = "Error: " + (err && err.message ? err.message : err);
      }
    }
  </script>
</body>
